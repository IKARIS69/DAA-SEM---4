#include<iostream>
using namespace std;
int linearsearch(int a[],int n,int key,int *c)
{
    for(int i=0;i<n;i++)
    {
        (*c)++;
        if(a[i]==key)
        {
            return 1;
        }
    }    
    return 0;
}
