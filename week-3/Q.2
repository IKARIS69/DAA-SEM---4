#include<iostream>
using namespace std;
void Selection(int a[],int n,int *com,int *swap)
{
int i,j;
for(int i=0;i<n-1;i++)
{
int min =i;
for(j=i+1;j<n;j++)
{
(*com)++;
if(a[j]<a[min])
{
min=j;
}
}
if(i!=min)
{
int temp=a[i];
a[i]=a[min];
a[min]=temp;
(*swap)++;
}
}
}
int main()
{
int a[100],n,i;
int com=0;
int swap=0;
cout<<"Enter size"<<endl;
cin>>n;
cout<<"Enter elemnets"<<endl;
for(i=0;i<n;i++)
{
cin>>a[i];
}
Selection(a,n,&com,&swap);
for(i=0;i<n;i++)
{
cout<<a[i]<<endl;
}
cout<<"Total Comparision"<<com<<endl;
cout<<"Total swaps"<<swap<<endl;
return 0;
}

 
