#include<iostream>
using namespace std;
int FindIndex(int a[],int n)
{
        int i,j,k;
        int c=0;
        for(k=n-1;k>=0;k--)
        {    
            i=0;
            j=k-1;
             while(i<j)
             {
                if(a[i]+a[j]==a[k])
                {
                    c=1;
                    break;
                }
                else if(a[i]+a[j]<a[k])
                {
                    i++;
                }
                else
                {
                    j--;
                }
             }
        
            if(c)
            {
                 cout<<i<<" "<<j<<" "<<k<<endl;
                break;
            }
                
        }          
    if(!c)
    {
        cout<<" No such Indexes found";
    }
}
int main()
{
    int a[100],n,i;
    cout<<"Enter Size of array"<<endl;
    cin>>n;
    for(i=0;i<n;i++)
    {
        cin>>a[i];
    }
    FindIndex(a,n);
    return 0;
}
